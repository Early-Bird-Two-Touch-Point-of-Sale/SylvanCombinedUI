<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/up"
            android:text="Parent Folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/dialoglist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:smoothScrollbar="true"
        android:fastScrollEnabled="false"
        android:nestedScrollingEnabled="false"
        android:touchscreenBlocksFocus="true"
        android:dividerHeight="0.5dp"
        android:drawSelectorOnTop="false"
        android:contextClickable="false"
        android:clickable="false">
    </ListView>

    <!--Placeholder for color formatting in the future
    android:background="#47092f"
    android:listSelector="#10f816"
    android:background="#ba3e6b"
    android:foregroundTint="#591a1e"
    android:divider="#1c1a20"
    android:textColor="#0cff46"
    android:background="#bf1550"
    -->

</LinearLayout>